    <Button
        android:id="@+id/btn_meal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text=""
        android:layout_centerInParent="true" />
    <Button
        android:id="@+id/btn_bed"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text=""
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/btn_meal" />
    <Button
        android:id="@+id/btn_act"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text=""
